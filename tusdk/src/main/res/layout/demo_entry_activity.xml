                android:layout_below="@id/lsq_homepage_editor"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="编辑视频"
                android:textColor="#22bbf4"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- 播放视频 -->
