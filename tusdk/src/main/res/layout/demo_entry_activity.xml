        <!-- 拍摄视频 -->
        <RelativeLayout
            android:id="@+id/lsq_record_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:background="@drawable/tusdk_button_home"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/lsq_homepage_shot"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/homepage_video"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lsq_homepage_shot"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="@string/lsq_text_recordEdit"
                android:textColor="#22bbf4"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- 编辑视频 -->
        <RelativeLayout
