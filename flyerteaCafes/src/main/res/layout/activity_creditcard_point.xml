<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_grey"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bg_title_height"
        layout="@layout/include_centre_title_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/creditcard_point_bank_name"
        android:textColor="@color/app_body_grey"
        android:textSize="@dimen/creditcard_point_item_name_size" />

    <LinearLayout
        android:id="@+id/creditcard_point_bank_name_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/creditcard_point_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/creditcard_point_bank_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/def_all"
            android:textColor="@color/app_body_black"
            android:textSize="@dimen/creditcard_point_item_name_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/right_arrow_small" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/creditcard_point_back_point"
        android:textColor="@color/app_body_grey"
        android:textSize="@dimen/creditcard_point_item_name_size" />

    <LinearLayout
        android:id="@+id/creditcard_point_back_point_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/creditcard_point_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/creditcard_point_back_point_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/def_all"
            android:textColor="@color/app_body_black"
            android:textSize="@dimen/creditcard_point_item_name_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/right_arrow_small" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/creditcard_point_business_type"
        android:textColor="@color/app_body_grey"
        android:textSize="@dimen/creditcard_point_item_name_size" />

    <LinearLayout
        android:id="@+id/creditcard_point_business_type_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/creditcard_point_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/creditcard_point_business_type_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/def_all"
            android:textColor="@color/app_body_black"
            android:textSize="@dimen/creditcard_point_item_name_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/right_arrow_small" />
    </LinearLayout>

    <ImageView
        android:id="@+id/creditcard_point_commit_btn"
        android:layout_width="161dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/start_inquiry" />

</LinearLayout>