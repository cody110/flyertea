<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_grey"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.ideal.flyerteacafes.ui.view.ToolBar
        style="@style/toolbar_white"
        app:title_bar="任务详情" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:background="@drawable/my_task_details_header"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zhouqi_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_body_size_3"
                    android:background="@drawable/tag_task_icon"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_marginTop="20dp"/>

                <com.ideal.flyerteacafes.ui.controls.RoundImageView
                    android:id="@+id/icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_def" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="申办工商银行白金信用卡成功核卡"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/app_body_size_1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/feimi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:drawableLeft="@mipmap/task_feimi_2"
                        android:drawablePadding="5dp"
                        android:text="飞米"
                        android:textColor="@color/app_body_grey"
                        android:textSize="@dimen/app_body_size_1"
                        android:visibility="gone"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/weiwang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:drawableLeft="@mipmap/task_weiwang_2"
                        android:drawablePadding="5dp"
                        android:text="威望"
                        android:textColor="@color/app_body_grey"
                        android:textSize="@dimen/app_body_size_1"
                        android:visibility="gone"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:drawableLeft="@mipmap/task_other_2"
                        android:drawablePadding="5dp"
                        android:text="其他"
                        android:textColor="@color/app_body_grey"
                        android:textSize="@dimen/app_body_size_1"
                        android:visibility="gone"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/xunzhang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:drawableLeft="@mipmap/task_xunzhang_2"
                        android:drawablePadding="5dp"
                        android:text="勋章"
                        android:textColor="@color/app_body_grey"
                        android:textSize="@dimen/app_body_size_1"
                        android:visibility="gone"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/app_commen_margin"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="任务描述"
                    android:textColor="@color/app_body_black"
                    android:textSize="@dimen/app_body_size_1" />
            </LinearLayout>

            <TextView
                android:id="@+id/miaoshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_commen_margin"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/app_commen_margin"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="任务有效期"
                    android:textColor="@color/app_body_black"
                    android:textSize="@dimen/app_body_size_1" />
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_commen_margin"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/app_commen_margin"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="任务状态"
                    android:textColor="@color/app_body_black"
                    android:textSize="@dimen/app_body_size_1" />
            </LinearLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_commen_margin"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_2" />


            <LinearLayout
                android:id="@+id/task_ok_jilu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="3dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/app_commen_margin"
                    android:background="@color/black" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="任务完成记录"
                    android:textColor="@color/app_body_black"
                    android:textSize="@dimen/app_body_size_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/log_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_commen_margin"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_xi"
                    android:background="@color/app_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/app_line_color" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="时间" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/app_line_color" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="威望" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/app_line_color" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="飞米" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/app_line_color" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_xi"
                    android:background="@color/app_line_color" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_xi"
        android:background="@color/app_line_color" />


    <TextView
        android:id="@+id/get_task_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/app_body_grey"
        android:textSize="@dimen/app_body_size_2"
        android:visibility="gone"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/do_task"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="去做任务"
            android:textColor="@color/app_bg_title"
            android:textSize="@dimen/app_body_size_1" />

        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/app_line_color" />

        <TextView
            android:id="@+id/get_jiangli"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="领取奖励"
            android:textColor="@color/app_bg_title"
            android:textSize="@dimen/app_body_size_1" />


    </LinearLayout>


</LinearLayout>