<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_def"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bg_title_height"
        android:background="@color/bg_toolbar">

        <TextView
            android:id="@+id/btn_close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_black"
            android:textSize="@dimen/app_body_size_2" />

        <TextView
            android:id="@+id/btn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableRight="@mipmap/icon_triangle_down_black"
            android:text="手机相册"
            android:textColor="@color/text_black"
            android:textSize="@dimen/app_bg_title_size" />

        <TextView
            android:id="@+id/album_preview_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="预览"
            android:textColor="@color/text_black"
            android:textSize="@dimen/app_body_size_2" />

    </RelativeLayout>

    <ListView
        android:id="@+id/album_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null" />


    <RelativeLayout
        android:id="@+id/album_bootom_layout_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bg_title_height"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:clickable="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="下一步"
            android:textColor="@color/app_bg_title"
            android:textSize="@dimen/app_bg_title_size" />
    </RelativeLayout>

</LinearLayout>