<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bg_title_height"
        android:background="@color/bg_toolbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/left_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fm_community_home_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/title_bg_text_bottom_line_bg"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="所有版块"
                android:textColor="@color/text_black"
                android:textSize="@dimen/app_body_size_1" />

            <TextView
                android:id="@+id/fm_community_home_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="关注版块"
                android:textColor="@color/text_black"
                android:textSize="@dimen/app_body_size_1" />
        </LinearLayout>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_indicator_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />

</LinearLayout>