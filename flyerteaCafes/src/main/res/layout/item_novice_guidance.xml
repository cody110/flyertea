<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <com.ideal.flyerteacafes.ui.controls.RoundImageView
        android:id="@+id/icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/app_commen_margin"
        android:src="@drawable/icon_def" />


    <LinearLayout
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_string_up_down_safe"
        android:layout_marginTop="@dimen/app_string_up_down_safe"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/app_body_black"
            android:textSize="@dimen/app_body_size_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/app_string_center_safe"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feimi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@mipmap/task_feimi"
                android:drawablePadding="3dp"
                android:text="飞米"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/weiwang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@mipmap/task_weiwang"
                android:drawablePadding="3dp"
                android:text="威望"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@mipmap/task_other"
                android:drawablePadding="3dp"
                android:text="其他"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/xunzhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@mipmap/task_xunzhang"
                android:drawablePadding="3dp"
                android:text="勋章"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_3"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/app_string_center_safe"
        android:textColor="#0096E6"
        android:textSize="@dimen/app_body_size_2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/app_commen_margin"
        android:src="@drawable/arrow_right" />
</LinearLayout>


