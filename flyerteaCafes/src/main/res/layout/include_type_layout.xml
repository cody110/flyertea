<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/choose_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/home_titlebar"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_navigation_bar_frist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_navigation_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/up_arrow"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/all" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/ll_navigation_bar_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_navigation_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/up_arrow"
                android:gravity="center"
                android:tag="4"
                android:text="@string/newest" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/choose_navigation_bar_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/choose_navigation_bar"
        android:background="@color/app_line_color" />

</LinearLayout>