<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ideal.flyerteacafes.ui.controls.FlyRoundImageView
        android:id="@+id/item_gride_raider"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        app:borderRadius="@dimen/home_pager_radius"
        app:type="round"/>

    <TextView
        android:id="@+id/item_raider_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_gride_raider"
        android:lines="2"
        android:textStyle="bold"
        android:textSize="@dimen/app_body_size_1"/>


</RelativeLayout>
