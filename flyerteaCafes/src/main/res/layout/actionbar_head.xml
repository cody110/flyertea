<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_bg_title_height"
    android:background="@color/app_bg_title">

    <LinearLayout
        android:id="@+id/actionbar_back_layout"
        android:layout_width="@dimen/app_bg_title_left_width"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/actionbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/back_img_margin_left" />
    </LinearLayout>

    <TextView
        android:id="@+id/actionbar_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/fly_daily"
        android:textColor="@color/white"
        android:textSize="@dimen/app_bg_title_size" />

    <ImageView
        android:id="@+id/actionbar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/serach" />

</RelativeLayout>