<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.ideal.flyerteacafes.ui.view.ToolBar
        android:id="@+id/toolbar"
        style="@style/toolbar_white"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ideal.flyerteacafes.ui.controls.PullToRefreshView2
            android:id="@+id/collect_refreshview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/collect_refreshview_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.ideal.flyerteacafes.ui.controls.PullToRefreshView2>

        <include layout="@layout/include_no_message"
            android:visibility="gone"/>
    </FrameLayout>


</LinearLayout>