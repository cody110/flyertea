<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <View
        android:layout_width="@dimen/app_commen_margin"
        android:layout_height="1dp" />

    <ImageView
        android:id="@+id/icon_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_commen_margin"
        android:src="@drawable/drawer_remind" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/app_commen_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_my_reply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_commen_margin"
            android:maxLines="2"
            android:textColor="@color/app_body_black"
            android:textSize="@dimen/app_body_size_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_commen_margin"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_my_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_2" />

            <TextView
                android:id="@+id/item_my_reply_forum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_2"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
