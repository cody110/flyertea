<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/term_service_title_include"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_bg_title_height"
        layout="@layout/include_left_title_bar" />

    <com.ideal.flyerteacafes.ui.controls.HotelInfoPresenter.fAttrid
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/term_service_body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size"
            android:layout_marginLeft="@dimen/listview_item_distance"
            android:layout_marginRight="@dimen/listview_item_distance" />

    </com.ideal.flyerteacafes.ui.controls.HotelInfoPresenter.fAttrid>

</LinearLayout>
