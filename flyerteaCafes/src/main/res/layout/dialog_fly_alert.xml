<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/progress_dialog_bg">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="确认举报？"
            android:textColor="@color/app_body_black"
            android:textSize="18sp"
            android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_fly_alert_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/app_body_size"
            android:textColor="@color/app_bg_title"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/app_line_color"/>
        <TextView
            android:id="@+id/dialog_fly_alert_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/app_body_size"
            android:textColor="@color/app_bg_title"/>
    </LinearLayout>

</LinearLayout>