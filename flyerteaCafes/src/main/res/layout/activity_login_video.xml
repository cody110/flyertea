<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/activity_1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_grey"
        android:orientation="vertical">

        <com.ideal.flyerteacafes.ui.view.ToolBar
            android:id="@+id/toolbar"
            style="@style/toolbar_white"
            app:title_bar="登录" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/phone_login_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phone_login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号登录"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/font_size_16" />

                <View
                    android:id="@+id/phone_login_select"
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/text_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/username_login_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名登录"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/font_size_16" />

                <View
                    android:id="@+id/username_login_select"
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/text_blue" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/username_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_commen_margin"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/text_light_grey"
                android:textColorHint="@color/text_light_grey"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/app_body_size_1" />

            <ImageView
                android:id="@+id/username_edit_clear_btn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/combined"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/line_margin_left_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_commen_margin"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="@color/text_light_grey"
                android:textColorHint="@color/text_light_grey"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/app_body_size_1" />

            <TextView
                android:id="@+id/password_get_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/light_grey_frame"
                android:minWidth="60dp"
                android:padding="5dp"
                android:text="获取验证码"
                android:textColor="@color/text_light_grey"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/app_body_size_2"
                android:gravity="center"
                android:layout_marginRight="@dimen/app_commen_margin"/>
        </LinearLayout>


        <TextView
            android:id="@+id/login_btn"
            style="@style/button_1"
            android:layout_marginTop="40dp"
            android:text="登录"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新用户？"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/new_user_regist_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="立即注册"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_commen_margin"
            android:layout_marginRight="@dimen/app_commen_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="@color/text_light_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="快捷登录"
                android:textColor="@color/text_light_grey"
                android:textSize="@dimen/app_body_size_2" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="@color/text_light_grey" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wechat_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_video_wechat" />

            <ImageView
                android:id="@+id/qq_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@mipmap/login_video_qq" />

            <ImageView
                android:id="@+id/sina_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_video_sina" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>