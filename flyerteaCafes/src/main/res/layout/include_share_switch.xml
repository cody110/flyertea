<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:id="@+id/ll_type"
    android:orientation="horizontal">


        <TextView
            android:id="@+id/share_type_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/type_login_left_checked"
            android:gravity="center"
            android:text="@string/type_login_phone"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/share_type_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/type_login_right"
            android:gravity="center"
            android:text="@string/type_login_username"
            android:textColor="@color/app_bg_title" />


</LinearLayout>