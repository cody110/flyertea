<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popupwindow_postdetails_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/post_pop_btn_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/popupwindow_roughdraft_item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/remind_is_save"
                    android:textColor="@color/app_body_grey"
                    android:textSize="@dimen/listview_time_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/app_line_color" />

            <RelativeLayout
                android:id="@+id/pop_roughdraft_save_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/popupwindow_roughdraft_item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/save"
                    android:textColor="@color/app_bg_title"
                    android:textSize="@dimen/app_body_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/app_line_color" />

            <RelativeLayout
                android:id="@+id/pop_roughdraft_not_save_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/popupwindow_roughdraft_item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/not_save"
                    android:textColor="@color/red"
                    android:textSize="@dimen/app_body_size" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/pop_roughdraft_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/popupwindow_roughdraft_item_height"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/post_pop_btn_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/cancel"
                android:textColor="@color/app_bg_title"
                android:textSize="@dimen/app_body_size" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>