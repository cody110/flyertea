<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">


    <com.ideal.flyerteacafes.ui.controls.PullToRefreshView
        android:id="@+id/fragment_refreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--com.ideal.flyerteacafes.ui.controls.HeaderViewPagerListView  -->
        <ListView
            android:id="@+id/fragment_refreshview_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.ideal.flyerteacafes.ui.controls.PullToRefreshView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/banner_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"></android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/main_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/banner_viewpager"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_point1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/img_gold_point" />

            <ImageView
                android:id="@+id/main_point2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/img_white_point" />

            <ImageView
                android:id="@+id/main_point3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/img_white_point" />

            <ImageView
                android:id="@+id/main_point4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/img_white_point" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
