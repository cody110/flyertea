<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/listview_flyhui_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/listview_time_size"
        android:textColor="@color/app_body_grey"
        android:layout_marginLeft="@dimen/listview_distance" />

    <TextView
        android:id="@+id/listview_flyhui_preferential_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/listview_time_size"
        android:textColor="@color/app_body_grey"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/listview_flyhui_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/listview_time_size"
        android:textColor="@color/app_body_grey"
        android:layout_weight="1"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/listview_flyhui_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/listview_time_size"
        android:textColor="@color/app_body_grey"
        android:layout_marginRight="@dimen/listview_distance"
        android:layout_marginLeft="5dp"/>

</LinearLayout>
