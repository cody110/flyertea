<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_xi"
        android:background="@color/app_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/major_thread_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/thread_comment"
            android:gravity="top"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_4"
            android:drawablePadding="@dimen/thread_bottom_icon_drawpadding"/>


        <TextView
            android:id="@+id/major_thread_shoucang_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/thread_shoucang"
            android:gravity="top"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_4"
            android:drawablePadding="@dimen/thread_bottom_icon_drawpadding"/>


        <TextView
            android:id="@+id/major_thread_sendflower_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/thread_flower"
            android:gravity="top"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_4"
            android:drawablePadding="@dimen/thread_bottom_icon_drawpadding"/>


        <TextView
            android:id="@+id/normal_bottom_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="@dimen/app_commen_margin"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/discount_go_to"
            android:gravity="center"
            android:text="立即参加"
            android:textColor="@color/white"
            android:textSize="@dimen/app_body_size_2" />

    </LinearLayout>
</LinearLayout>