<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/app_commen_margin">

    <TextView
        android:id="@+id/item_my_reply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/app_commen_margin"
        android:layout_marginTop="@dimen/app_commen_margin"
        android:singleLine="true"
        android:textColor="@color/app_body_black"
        android:textSize="@dimen/app_body_size_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_commen_margin"
        android:layout_marginRight="@dimen/app_commen_margin"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_my_reply_forum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_2" />

        <TextView
            android:id="@+id/item_my_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_string_left_right_safe"
            android:singleLine="true"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_2" />
    </LinearLayout>

</LinearLayout>
