<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_bg_title_not_line_height"
    android:background="@color/bg_toolbar"
    android:id="@+id/include_title_menu_root">

    <RelativeLayout
        android:id="@+id/include_title_menu_btn"
        android:layout_width="@dimen/app_bg_title_left_width"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/include_title_menu_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_img_margin_left"
            android:src="@drawable/left_back" />

        <TextView
            android:id="@+id/include_title_menu_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_img_margin_left"
            android:textSize="@dimen/app_bg_title_size"
            android:textColor="@color/text_black"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/include_title_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/include_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/app_bg_title_size" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/include_title_right_btn"
        android:layout_width="@dimen/app_bg_title_right_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/include_title_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/back_img_margin_left" />

        <TextView
            android:id="@+id/include_title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/back_img_margin_left"
            android:textSize="@dimen/app_body_size"
            android:textColor="@color/text_black" />

    </RelativeLayout>

</RelativeLayout>