<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_grey"
    android:id="@+id/no_message_root">


    <ImageView
        android:id="@+id/migv_no_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mtv_no_message"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_no_message" />

    <TextView
        android:id="@+id/mtv_no_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/app_commen_margin"
        android:text="@string/include_data_load_null"
        android:textColor="@color/app_grey"
        android:textSize="@dimen/app_body_size_1" />


</RelativeLayout>