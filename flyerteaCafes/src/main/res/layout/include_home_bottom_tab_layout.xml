<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_bottom_tab_img"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/home_bottom_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_bottom_tab_img"
        android:layout_centerHorizontal="true"
        android:text="首页"
        android:textColor="@color/app_bg_title"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/home_is_red_img"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/home_bottom_tab_img"
        android:src="@drawable/drawer_remind"
        android:visibility="gone" />

</RelativeLayout>