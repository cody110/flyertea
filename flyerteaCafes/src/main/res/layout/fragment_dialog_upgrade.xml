<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upgrade_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10">


    <LinearLayout
        android:id="@+id/upgrade_content_layout"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/upgrade_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/upgrade_version_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="bottom"
            android:paddingBottom="30dp"
            android:text="6.6新版上线"
            android:textColor="@color/white"
            android:textSize="@dimen/app_body_size_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/upgrade_version_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/app_commen_margin"
                android:layout_marginRight="@dimen/app_commen_margin"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/app_body_black"
                android:textSize="@dimen/app_body_size_2"
                android:scrollbars="vertical" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/app_line_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <LinearLayout
                android:id="@+id/upgrade_version_choose_upgrade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/upgrade_version_close"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="稍后再说"
                    android:textColor="@color/app_body_grey"
                    android:textSize="@dimen/app_body_size_2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/app_line_color" />


                <TextView
                    android:id="@+id/upgrade_version_upgrade"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="立即更新"
                    android:textColor="@color/app_bg_title"
                    android:textSize="@dimen/app_body_size_2" />
            </LinearLayout>

            <TextView
                android:id="@+id/upgrade_version_once_upgrade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/app_bg_title"
                android:textSize="@dimen/app_body_size_2" />

        </FrameLayout>


    </LinearLayout>


</LinearLayout>