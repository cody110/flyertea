<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listview_item_distance"
        android:layout_marginRight="@dimen/listview_item_distance"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_list_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:singleLine="true" />

        <com.ideal.flyerteacafes.ui.controls.RoundImageView
            android:id="@+id/main_list_item_ico"
            android:layout_width="18dp"
            android:layout_height="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listview_item_distance"
        android:layout_marginRight="@dimen/listview_item_distance"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_list_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/main_list_item_dbdateline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/main_list_item_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/mythread_num" />
    </LinearLayout>

    <ImageView
        android:id="@+id/main_list_item_img"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="@dimen/listview_item_distance"
        android:layout_marginRight="@dimen/listview_item_distance"
        android:scaleType="centerCrop"
        android:src="@drawable/post_def"
        android:visibility="gone"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/main_list_item_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/listview_item_distance"
        android:layout_marginRight="@dimen/listview_item_distance"
        android:textColor="#9B9B9B"
        android:textSize="14sp" />

</LinearLayout>