<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/app_commen_margin"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/app_string_up_down_safe"
    android:paddingBottom="@dimen/app_string_up_down_safe"
    android:gravity="center_vertical">


    <com.ideal.flyerteacafes.ui.controls.RoundImageView
        android:id="@+id/igv_face"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/def_face_2" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="3dp">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_user_lever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/igv_send_private_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/search_private_letter"/>

    <ImageView
        android:id="@+id/igv_is_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/search_add_friends"
        android:layout_marginLeft="12dp"/>

</LinearLayout>