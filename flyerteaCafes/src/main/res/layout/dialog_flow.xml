<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/progress_dialog_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/description_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="流量提醒"
        android:textColor="@color/app_body_black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/et_tag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="当前为无WiFi网络，继续播放可能会被运营商收取流量费用"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/app_body_black"
        android:textSize="@dimen/font_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_xi"
        android:background="@color/app_line_header_color" />

    <TextView
        android:id="@+id/one_allow_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="继续播放，仅允许一次"
        android:textColor="@color/app_bg_title"
        android:textSize="@dimen/font_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_xi"
        android:background="@color/app_line_header_color" />

    <TextView
        android:id="@+id/all_allow_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="继续播放，永久允许"
        android:textColor="@color/app_bg_title"
        android:textSize="@dimen/font_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_xi"
        android:background="@color/app_line_header_color" />

    <TextView
        android:id="@+id/cancle_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/app_bg_title"
        android:textSize="@dimen/font_size_14" />

</LinearLayout>