<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.ideal.flyerteacafes.ui.controls.TouchImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <com.ideal.flyerteacafes.ui.view.ToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bg_title_height"
        app:background_bar="@color/white"
        app:leftImgSrc="@drawable/left_back"
        app:title_bar="编辑图片"
        app:rightText="完成"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/include_item_height"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/change_img"
            android:layout_width="@dimen/include_item_height"
            android:layout_height="@dimen/include_item_height"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="更换"
            android:textColor="@color/white"
            android:textSize="@dimen/app_body_size_2" />

        <TextView
            android:id="@+id/delete_img"
            android:layout_width="@dimen/include_item_height"
            android:layout_height="@dimen/include_item_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/app_body_size_2" />
    </RelativeLayout>


</RelativeLayout>