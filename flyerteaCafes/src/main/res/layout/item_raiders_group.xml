<?xml version="1.0" encoding="utf-8"?>
<com.ideal.flyerteacafes.ui.controls.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_raider_group_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/raiders_item_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY" />

        <com.ideal.flyerteacafes.ui.controls.AutoScaleTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="星空联盟"
            android:textColor="@color/live_com_info_item"/>

    </LinearLayout>

</com.ideal.flyerteacafes.ui.controls.SquareLayout>