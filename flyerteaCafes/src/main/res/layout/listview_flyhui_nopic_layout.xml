<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/flyhui_nopic_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flyhui_nopic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listview_title_size"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/listview_distance"
            android:layout_marginRight="@dimen/listview_distance"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/flyhui_nopic_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/listview_body_size"
            android:textColor="@color/app_body_grey"
            android:lines="4"
            android:layout_marginLeft="@dimen/listview_distance"
            android:layout_marginRight="@dimen/listview_distance" />

        <include
            layout="@layout/include_flyhui_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

</RelativeLayout>
