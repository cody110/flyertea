<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.ideal.flyerteacafes.ui.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bg_title_height"
        app:leftImgSrc="@drawable/icon_delete"
        app:title_bar="@string/html_title_store" />


    <com.youzan.sdk.web.plugin.YouzanBrowser
        android:id="@+id/store_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software"/>

</LinearLayout>