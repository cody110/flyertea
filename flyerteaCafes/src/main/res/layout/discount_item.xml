<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/app_commen_margin"
    android:paddingRight="@dimen/app_commen_margin"
    android:paddingTop="10dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_post_subject"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/app_string_up_down_safe"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/home_title_color"
            android:textSize="@dimen/app_body_size_1"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discount_hotel_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="酒店集团"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_3" />

            <TextView
                android:id="@+id/discount_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2小时前"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_3" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="12dp">

        <com.ideal.flyerteacafes.ui.controls.FlyRoundImageView
            android:id="@+id/item_post_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/post_def"
            app:borderRadius="@dimen/home_pager_radius"
            app:type="round" />

        <TextView
            android:id="@+id/daojishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#b0FFFFFF"
            android:gravity="center"
            android:padding="3dp"
            android:text="倒计时"
            android:textColor="@color/red"
            android:textSize="@dimen/app_body_size_3"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>