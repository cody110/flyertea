<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/include_setting_item_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listview_distance"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/include_setting_item_right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/listview_distance"
        android:layout_centerVertical="true"
        android:src="@drawable/right_arrow_small" />

    <TextView
        android:id="@+id/include_setting_item_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/listview_distance"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_xi"
        android:background="@color/app_line_color"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
