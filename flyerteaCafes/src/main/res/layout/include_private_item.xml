<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/creditcard_choose_item_layout">


    <TextView
        android:id="@+id/creditcard_choose_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/listview_item_distance"
        android:textSize="@dimen/listview_body_size"
        android:textColor="@color/app_body_black" />

    <ImageView
        android:id="@+id/creditcard_choose_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/choose_img"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/listview_distance" />

</RelativeLayout>
