<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ideal.flyerteacafes.ui.view.AppTitleBar
        android:id="@+id/fm_homepager_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bg_title_height"/>

    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/fm_homepager_tabpageindicator"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fm_homepager_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />

</LinearLayout>
