<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/include_dialog_fragment_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/userinfo_dialog_item_textsize"
        android:textColor="@color/app_body_grey" />

    <TextView
        android:id="@+id/include_dialog_fragment_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/app_body_grey"
        android:textSize="@dimen/userinfo_dialog_item_numsize" />

</LinearLayout>