<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_topic_item"/>

    <LinearLayout
        android:id="@+id/topic_weekly_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:background="@color/white">
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/app_bg_title"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_body_size"
            android:text="@string/topic_weekly"
            android:textColor="@color/app_body_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topic_more"
            android:textSize="12sp"
            android:textColor="@color/app_body_black"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_xi"
        android:background="@color/app_line_color"/>

</LinearLayout>