<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.ideal.flyerteacafes.ui.layout.RaidersGroupLayout
            android:id="@+id/hot_group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />

        <include layout="@layout/include_line_xi_view" />

        <com.ideal.flyerteacafes.ui.layout.RaidersGroupLayout
            android:id="@+id/hotel_raiders_group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />

        <include layout="@layout/include_line_xi_view" />

        <com.ideal.flyerteacafes.ui.layout.RaidersGroupLayout
            android:id="@+id/flyer_raiders_group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />

        <include layout="@layout/include_line_xi_view" />

        <com.ideal.flyerteacafes.ui.layout.RaidersGroupLayout
            android:id="@+id/carl_raiders_group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>
