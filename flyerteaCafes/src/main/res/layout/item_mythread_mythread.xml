<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_my_thread_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="@dimen/app_commen_margin"
    android:paddingLeft="@dimen/app_commen_margin"
    android:paddingTop="@dimen/app_commen_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_my_thread_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/app_commen_margin"
            android:singleLine="true"
            android:textColor="@color/app_body_black"
            android:textSize="@dimen/app_body_size_1" />

        <TextView
            android:id="@+id/thread_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(审核中)"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_2"
            android:visibility="gone" />

    </LinearLayout>


    <GridView
        android:id="@+id/item_my_thread_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/app_commen_margin"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:verticalSpacing="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/app_commen_margin"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_my_thread_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_3" />

        <TextView
            android:id="@+id/item_my_thread_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_3" />

        <TextView
            android:id="@+id/item_my_thread_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_string_left_right_safe"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_3" />
    </LinearLayout>

</LinearLayout>