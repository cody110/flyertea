<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/topic_item_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_image_top_height"
        android:scaleType="fitXY"
        android:src="@drawable/post_def"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/advertisement_viewpager_layout_bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/advert_translucent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/topic_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/topic_item_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>