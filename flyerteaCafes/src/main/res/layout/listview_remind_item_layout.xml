<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/face_size"
        android:layout_height="@dimen/face_size"
        android:src="@drawable/def_face"
        android:layout_marginLeft="@dimen/listview_item_distance"
        android:layout_marginRight="@dimen/listview_item_distance"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_remind_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/listview_body_size" />


        <TextView
            android:id="@+id/list_remind_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_body_black"
            android:textSize="@dimen/listview_body_size"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/list_remind_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/listview_time_size"
                android:layout_marginRight="@dimen/listview_distance" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
