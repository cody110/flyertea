<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_tool_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="90dp">


    <ImageView
        android:id="@+id/item_tool_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/item_tool_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/item_tool_icon"
        android:textColor="@color/grey"
        android:textSize="@dimen/app_bg_title_size"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/item_tool_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_commen_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/item_tool_icon"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_alignRight="@+id/item_tool_arrow">

        <TextView
            android:id="@+id/item_tool_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/app_bg_title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/item_tool_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_2" />

            <TextView
                android:id="@+id/item_tool_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_body_grey"
                android:textSize="@dimen/app_body_size_2"
                android:layout_marginLeft="@dimen/back_img_margin_left"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>