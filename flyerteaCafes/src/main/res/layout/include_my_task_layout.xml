<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frames_top_bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/app_commen_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手任务"
            android:textColor="@color/app_black"
            android:textSize="@dimen/app_body_size_1" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_string_left_right_safe"
            android:textColor="@color/app_body_grey"
            android:textSize="@dimen/app_body_size_3" />
    </LinearLayout>

    <include layout="@layout/include_line_xi_view" />


    <com.ideal.flyerteacafes.ui.layout.TaskListGroupLayout
        android:id="@+id/tasklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <include layout="@layout/include_line_xi_view" />


    <TextView
        android:id="@+id/see_more"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="查看更多"
        android:textColor="@color/app_body_grey" />

</LinearLayout>