<?xml version="1.0" encoding="utf-8"?>
<com.ideal.flyerteacafes.ui.controls.RPLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basic_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_def"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.ideal.flyerteacafes.ui.view.ToolBar
        android:id="@+id/basic_titlebar_layout"
        style="@style/toolbar_white" />


    <FrameLayout
        android:id="@+id/basic_content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_bg_grey"
        android:orientation="vertical">

    </FrameLayout>


</com.ideal.flyerteacafes.ui.controls.RPLinearLayout>