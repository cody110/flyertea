<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/listview_item_left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/listview_distance"
        android:layout_marginRight="@dimen/listview_distance">

        <com.ideal.flyerteacafes.ui.controls.RoundImageView
            android:id="@+id/listview_item_left_layout_face"
            android:layout_width="@dimen/face_size"
            android:layout_height="@dimen/face_size"
            android:src="@drawable/def_face" />

        <LinearLayout
            android:id="@+id/listview_item_left_layout_body_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/listview_item_left_layout_face"
            android:background="@drawable/ta4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="55dp">

            <TextView
                android:id="@+id/listview_item_left_layout_body_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="3dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listview_item_right_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/listview_distance"
        android:layout_marginRight="@dimen/listview_distance">

        <com.ideal.flyerteacafes.ui.controls.RoundImageView
            android:id="@+id/listview_item_right_layout_face"
            android:layout_width="@dimen/face_size"
            android:layout_height="@dimen/face_size"
            android:src="@drawable/def_face"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:id="@+id/listview_item_right_layout_body_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/listview_item_right_layout_face"
            android:background="@drawable/me9"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="55dp">

            <TextView
                android:id="@+id/listview_item_right_layout_body_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
