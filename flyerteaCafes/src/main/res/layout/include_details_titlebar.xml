<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_bg_title_height">

    <Button
        android:id="@+id/details_titilebar_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/details_titlebar_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_centerInParent="true"
        android:textSize="@dimen/app_bg_title_size"
        android:textColor="@color/app_bg_title" />

    <Button
        android:id="@+id/details_titlebar_collect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/details_titlebar_share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/details_titlebar_collect_btn"
        android:layout_centerVertical="true" />

</RelativeLayout>
