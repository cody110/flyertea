<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/fm_management_plate_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/app_line_color"
        android:dividerHeight="@dimen/line_height_xi" />

    <TextView
        android:id="@+id/fm_management_plate_normal_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="您还没有关注任何版块哦"
        android:textColor="@color/app_body_grey"
        android:textSize="@dimen/app_body_size_2" />

</RelativeLayout>